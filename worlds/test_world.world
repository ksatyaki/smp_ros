define block model
(
  color_rgba [0 0 1 0.15]
  size [0.05 0.05 0.05]
  gui_nose 0
)

define sicksensor sensor
(				
  # factory settings for LMS200	
  range [ 0.0 8.0 ]
  pose [ 0 0 0 0 ]
  fov 180
  samples 180
  #samples 90 # still useful but much faster to compute
  color_rgba [ 0 0 1 0.15 ]
)

define sickbase ranger
(
	block( points 4
				 point[0] [0 0]
				 point[1] [0 1]
				 point[2] [1 1]
				 point[3] [1 0]
				 z [0 0.1]
				 )
)
define sicklaser sickbase ( sicksensor() )

define erratic position
(
  size [0.5 0.25 0.25]
  origin [0 0 0 0]
  gui_nose 1
  drive "car"
  wheelbase 0.5
  sicklaser( pose [ 0.0 0.00 -0.1 0.0 ] )   
  localization "odom"
  odom_error [0.01 0.05 0.01 0.02 0.01 0.02]
)

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 0

  gui_nose 0
  gui_grid 0

  gui_outline 0
  gripper_return 0
  fiducial_return 0
  ranger_return 1
)

# set the resolution of the underlying raytrace model in meters
resolution 0.02
interval_sim 100  # simulation timestep in milliseconds

window
( 
  size [ 75.0 75.0 ] 
)

# load an environment bitmap
floorplan
( 
  name "test_world"
  bitmap "test_world.png"
  size [10.0 10.0 1.0]
  pose [0.0 0.0 0.0 0.0]
)

# throwcar like robot gazebo in a robot
erratic(
  pose [ 0.0 0.0 0 0.00 ]
  name "MapperBot"
  color "green"
)


